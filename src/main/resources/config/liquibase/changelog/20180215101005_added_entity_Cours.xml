    <!--
        Added the entity Cours.
    -->
    <changeSet id="20180215101005-1" author="jhipster">
        <createTable tableName="cours">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="jhi_date" type="date">
                <constraints nullable="true" />
            </column>

            <column name="heure" type="timestamp">
                <constraints nullable="true" />
            </column>
            <column name="cours_professeur_id" type="bigint">
                <constraints unique="true" nullable="false" />
            </column>            <column name="cours_class_id" type="bigint">
                <constraints unique="true" nullable="false" />
            </column>            <column name="salle_cours_id" type="bigint">
                <constraints unique="true" nullable="false" />
            </column>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
        </createTable>
        <dropDefaultValue tableName="cours" columnName="heure" columnDataType="datetime"/>
        
    </changeSet>
    <!-- jhipster-needle-liquibase-add-changeset - JHipster will add changesets here, do not remove-->
</databaseChangeLog>
